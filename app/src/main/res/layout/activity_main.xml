<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_color"
        android:layout_marginTop="50dp"
        android:text="@string/launch_second_button" />

    <EditText
        android:id="@+id/edit_color"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:hint="@string/hint_color_enter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actual_color"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/edit_color"
        android:text="@string/introduction_text" />

</RelativeLayout>

